<Application x:Class="Undy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Undy"
             xmlns:vm="clr-namespace:Undy.Features.ViewModel"
             xmlns:views="clr-namespace:Undy.Views">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/StyleLoader.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:SalesOrderViewModel}">
                <views:SalesOrderView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ProductViewModel}">
                <views:ProductView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:WholesaleOrderViewModel}">
                <views:WholesaleOrderView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PaymentViewModel}">
                <views:PaymentView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:IncomingWholesaleOrderViewModel}">
                <views:IncomingWholesaleOrderView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:StartPageViewModel}">
                <views:StartPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:TestReturnOrderViewModel}">
                <views:TestReturnOrderView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:TestSalesOrderViewModel}">
                <views:TestSalesOrderView/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
