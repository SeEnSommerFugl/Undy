<UserControl x:Class="Undy.Views.IncomingWholeSaleOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Border Style="{DynamicResource Card}" Margin="40">
        <Grid Margin="40">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Varemodtagelse"
                       Style="{DynamicResource H2}"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1"
                       Text="Registrér modtagelse af indkøbsordrer."
                       Style="{DynamicResource H3}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"
                       Foreground="Red"/>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- ORDRER -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Indkøbsordrer" Style="{DynamicResource TitleLeft}" Margin="0,0,0,10"/>

                    <DataGrid ItemsSource="{Binding WholesaleOrders}"
                              SelectedItem="{Binding SelectedOrder}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Leverandør" Binding="{Binding SupplierName}" Width="*"/>
                            <DataGridTextColumn Header="Dato" Binding="{Binding OrderDate}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <!-- LINJER -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <CheckBox Grid.Row="0"
                              Content="Fuldt modtaget"
                              IsChecked="{Binding IsFullyReceived}"
                              Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Lines}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Produkt" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Bestilt" Binding="{Binding OrderedQuantity}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Modtaget" Binding="{Binding ReceivedQuantity}" Width="80"/>
                            <DataGridTextColumn Header="Difference" Binding="{Binding Difference}" Width="80" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="2"
                            Content="Bekræft modtagelse"
                            Command="{Binding ConfirmReceiptCommand}"
                            Style="{DynamicResource ButtonBase}"
                            Margin="0,10,0,0"
                            Width="200"/>
                </Grid>
            </Grid>

            <TextBlock Grid.Row="3"
                       Text="{Binding StatusMessage}"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       FontSize="18"
                       FontWeight="Bold"/>
        </Grid>
    </Border>
</UserControl>
