<UserControl x:Class="Undy.Views.IncomingWholesaleOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Border Style="{DynamicResource Card}">
        <Grid Margin="40">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titel -->
            <TextBlock Grid.Row="0"
                       Text="Varemodtagelse"
                       Style="{DynamicResource H2}"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1"
                       Text="Registrér modtagelse af indkøbsordrer."
                       Style="{DynamicResource H3}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"
                       Foreground="Red"/>

            <!-- Indhold -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- ORDRER (venstre) -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Indkøbsordrer"
                               Style="{DynamicResource TitleLeft}"
                               Margin="0,0,0,10"/>

                    <DataGrid ItemsSource="{Binding WholesaleOrders}"
                              SelectedItem="{Binding SelectedOrder}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <!-- midlertidigt: brug ordrenummer som “Leverandør”-kolonne -->
                            <DataGridTextColumn Header="Ordrenr."
                                                Binding="{Binding DisplayPurchaseOrderNumber}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Dato"
                                                Binding="{Binding PurchaseOrderDate}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Status"
                                                Binding="{Binding OrderStatus}"
                                                Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <!-- LINJER (højre) -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <CheckBox Grid.Row="0"
                              Content="Fuldt modtaget"
                              IsChecked="{Binding IsFullyReceived}"
                              Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Lines}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Produkt"
                                                Binding="{Binding ProductName}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Bestilt"
                                                Binding="{Binding OrderedQuantity}"
                                                Width="80"
                                                IsReadOnly="True"/>
                            <DataGridTextColumn Header="Modtaget"
                                                Width="80">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="ReceivedQuantity"
                                             UpdateSourceTrigger="PropertyChanged"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Difference"
                                                Binding="{Binding Difference}"
                                                Width="80"
                                                IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="2"
                            Content="Bekræft modtagelse"
                            Command="{Binding ConfirmOrderCommand}"
                            Style="{DynamicResource ButtonBase}"
                            Margin="0,10,0,0"
                            Width="200"/>
                </Grid>
            </Grid>

            <!-- Status-besked -->
            <TextBlock Grid.Row="3"
                       Text="{Binding StatusMessage}"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       FontSize="18"
                       FontWeight="Bold"/>
        </Grid>
    </Border>
</UserControl>
