<Window x:Class="Undy.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Undy.Views"
        xmlns:views="clr-namespace:Undy.Views"
        mc:Ignorable="d"
        Title="MainWindow"
        d:DesignWidth="1920" d:DesignHeight="1080"
        MaxWidth="1920" MaxHeight="1080"
        UseLayoutRounding="True" SnapsToDevicePixels="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Fix: Use relative path for ResourceDictionary Source -->
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Main Layout Grid -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Menu og Titel Row -->
            <RowDefinition Height="220"/>
            <!-- Content Row -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Menu Column -->
            <ColumnDefinition Width="220"/>
            <!-- Content Column -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <ListBox ItemsSource="{Binding Nav.Items}"
                     SelectedItem="{Binding Nav.Selected}"
                     Style="{StaticResource NavListBox}"
                     Margin="10"/>

        </StackPanel>
        
    </Grid>
</Window>
