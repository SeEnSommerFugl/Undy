<Window x:Class="Undy.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Undy.Views"
        xmlns:views="clr-namespace:Undy.Views"
        mc:Ignorable="d"
        d:DesignWidth="1920" d:DesignHeight="1080"
        MaxWidth="1920" MaxHeight="1080"
        UseLayoutRounding="True" SnapsToDevicePixels="True"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Fix: Use relative path for ResourceDictionary Source -->
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Main Layout Grid -->
    <Grid Margin="16" ShowGridLines="True">

        <Grid.ColumnDefinitions>
            <!-- Venstre rail -->
            <ColumnDefinition Width="180"/>
            <!-- Venstre mellemrum -->
            <ColumnDefinition Width="16"/>
            <!-- Indhold -->
            <ColumnDefinition Width="*"/>
            <!-- Højre mellemrum (spejl) -->
            <ColumnDefinition Width="16"/>
            <!-- Højre gutter (spejl af venstre rail) -->
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Undy"
                       TextWrapping="Wrap"
                       FontSize="50"
                       FontWeight="Bold"
                       TextAlignment="Center"/>

            <ListBox ItemsSource="{Binding Nav.Items}"
                     SelectedItem="{Binding Nav.Selected}"
                     Style="{StaticResource NavListBox}"
                     Margin="0,75,0,0"/>
        </StackPanel>

        <!-- Indholdet binder direkte til Navigation -->
        <ContentControl Grid.Column="2"
                Content="{Binding Nav.CurrentView}"/>

    </Grid>
</Window>
