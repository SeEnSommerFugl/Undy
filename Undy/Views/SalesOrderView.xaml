<UserControl x:Class="Undy.Views.SalesOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Undy.Views"
             mc:Ignorable="d" 
             d:DesignWidth="1980" d:DesignHeight="1048">
    <Grid>

        <DataGrid AutoGenerateColumns="False"
          ItemsSource="{Binding Products}"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          GridLinesVisibility="All"
          BorderThickness="1"
          BorderBrush="#CCCCCC"
          RowHeight="30"
          ColumnHeaderHeight="30"
          FontSize="14"
          Margin="10">

            <DataGrid.Columns>

            <DataGridTextColumn Header="Produktnummer"
                    Binding="{Binding ProductNumber}"
                    Width="*" />

            <DataGridTextColumn Header="Produktnavn"
                    Binding="{Binding ProductName}"
                    Width="*" />

            <DataGridTextColumn Header="Pris"
                    Binding="{Binding Price}"
                    Width="Auto" />

            <DataGridTextColumn Header="Størrelse"
                    Binding="{Binding Size}"
                    Width="Auto" />

            <DataGridTextColumn Header="Farve"
                    Binding="{Binding Colour}"
                    Width="Auto" />

            <DataGridTextColumn Header="Antal på lager"
                    Binding="{Binding InStock}"
                    Width="Auto" />

            <DataGridTextColumn Header="Status"
                    Binding="{Binding Status}"
                    Width="Auto"/>

        </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
