<UserControl x:Class="Undy.Views.SalesOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:h="clr-namespace:Undy.ViewModels.Helpers"
             mc:Ignorable="d" 
             d:DesignWidth="1280" d:DesignHeight="720">

    <!-- Ydre kort-container (samme stil som dine andre views) -->
    <Border Style="{DynamicResource Card}"
            Margin="40">

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <!-- Titel -->
                <RowDefinition Height="Auto"/>
                <!-- Undertekst -->
                <RowDefinition Height="Auto"/>
                <!-- Liste -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titel -->
            <TextBlock Grid.Row="0"
                       Text="Salgsordrer"
                       Style="{DynamicResource H2}"/>

            <!-- Undertekst -->
            <TextBlock Grid.Row="1"
                       Text="Oversigt over salgsordrer."
                       FontSize="16"
                       Margin="0,10,0,20"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource Brush.Text}"/>

            <!-- ListView med salgsordrer (read-only) -->
            <ListView Grid.Row="2"
          Style="{DynamicResource ListView.Table}"
          ItemsSource="{Binding SaleView}"
          MaxHeight="1000">
                <ListView.View>
                    <GridView>

                        <!-- Ordrenummer -->
                        <GridViewColumn Header="Ordrenummer"
                            DisplayMemberBinding="{h:Bind OrderNumber}" />

                        <!-- Ordrestatus -->
                        <!-- Skift OrderStatus til det property-navn du faktisk bruger (fx Status / SalesOrderStatus) -->
                        <GridViewColumn Header="Ordrestatus"
                            DisplayMemberBinding="{h:Bind OrderStatus}" />

                        <!-- Betalingsstatus -->
                        <GridViewColumn Header="Betalingsstatus"
                            DisplayMemberBinding="{h:Bind PaymentStatus}" />

                        <!-- Salgsdato -->
                        <GridViewColumn Header="Salgsdato"
                            DisplayMemberBinding="{h:Bind SalesDate:dd-MM-yyyy}" />

                        <!-- Produkt -->
                        <GridViewColumn Header="Produkt"
                            DisplayMemberBinding="{h:Bind ProductName}" />

                        <!-- Antal -->
                        <GridViewColumn Header="Antal"
                            DisplayMemberBinding="{h:Bind Quantity}" />

                        <!-- Pris -->
                        <GridViewColumn Header="Pris"
                            DisplayMemberBinding="{h:Bind TotalPrice:C}" />

                    </GridView>
                </ListView.View>

            </ListView>

        </Grid>
    </Border>
</UserControl>
