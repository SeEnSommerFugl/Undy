<UserControl x:Class="Undy.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="900">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False">
            <Button Content="Tilføj produkt"
                    Padding="16,8"
                    DockPanel.Dock="Right"
                    Command="{Binding OpenAddCommand}" />
        </DockPanel>

        <ListView Grid.Row="2"
                  ItemsSource="{Binding ProductView}"
                  BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Produktnr." Width="140"
                                    DisplayMemberBinding="{Binding ProductNumber}" />
                    <GridViewColumn Header="Navn" Width="260"
                                    DisplayMemberBinding="{Binding ProductName}" />
                    <GridViewColumn Header="Pris" Width="90"
                                    DisplayMemberBinding="{Binding Price}" />
                    <GridViewColumn Header="Str." Width="70"
                                    DisplayMemberBinding="{Binding Size}" />
                    <GridViewColumn Header="Farve" Width="120"
                                    DisplayMemberBinding="{Binding Colour}" />
                    <GridViewColumn Header="Lager" Width="80"
                                    DisplayMemberBinding="{Binding NumberInStock}" />

                    <GridViewColumn Header="" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Edit"
                                        Padding="14,6"
                                        Command="{Binding DataContext.OpenEditCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
