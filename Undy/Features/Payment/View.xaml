<UserControl x:Class="Undy.Views.PaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MaxWidth="1920" MaxHeight="1080"
             Background="White">

    <Border Style="{DynamicResource Card}" Margin="40">
        <Grid Margin="40">
            <!-- Rækker: titel, undertitel, ordre-header, main, statusbesked -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Titel -->
                <RowDefinition Height="Auto"/>
                <!-- Undertitel -->
                <RowDefinition Height="Auto"/>
                <!-- Ordre-header -->
                <RowDefinition Height="*"/>
                <!-- Main content -->
                <RowDefinition Height="Auto"/>
                <!-- Status besked -->
            </Grid.RowDefinitions>

            <!-- Titel -->
            <TextBlock Grid.Row="0"
                       Text="Betalinger"
                       Style="{DynamicResource H1}"
                       HorizontalAlignment="Center"/>

            <!-- Undertitel -->
            <TextBlock Grid.Row="1"
                       Text="Gennemgå ordreoplysninger og behandl ordren."
                       Style="{DynamicResource H2}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"
                       Foreground="Red"/>

            <!-- ORDRE-HEADER -->
            <Grid Grid.Row="2"
                  Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <!-- venstre blok -->
                    <ColumnDefinition Width="40"/>
                    <!-- mellemrum -->
                    <ColumnDefinition Width="2*"/>
                    <!-- højre blok (Totalbeløb) -->
                </Grid.ColumnDefinitions>

                <!-- VENSTRE: Ordre nr + Kunde -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Ordre nr. -->
                    <StackPanel Grid.Column="0"
                                Orientation="Vertical"
                                HorizontalAlignment="Right">
                        <TextBlock Text="Ordre nr."
                                   Style="{DynamicResource TitleLeft}"/>
                        <TextBlock Text="{Binding DisplayOrderNumber}"
                                   FontSize="18"
                                   FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Kunde -->
                    <StackPanel Grid.Column="1"
                                Orientation="Vertical"
                                HorizontalAlignment="Right">
                        <TextBlock Text="Kunde"
                                   Style="{DynamicResource TitleLeft}"/>
                        <TextBlock Text="{Binding DisplayCustomerName}"
                                   FontSize="18"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Grid>

                <!-- HØJRE: Totalbeløb -->
                <StackPanel Grid.Column="2"
                            Orientation="Vertical"
                            HorizontalAlignment="Right">
                    <TextBlock Text="Totalbeløb"
                               Style="{DynamicResource TitleLeft}"/>
                    <TextBlock Text="{Binding DisplayTotalAmount}"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- EN samlet top-linje hen over hele main-området -->
                <Border Grid.Column="0"
                        Grid.ColumnSpan="3"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="0,1,0,0"
                        Margin="0,0,0,0"/>

                <!-- VENSTRE: Ordrelinjer -->
                <Border Grid.Column="0"
                        Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- label -->
                            <RowDefinition Height="*" />
                            <!-- DataGrid -->
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Ordrelinjer"
                                   Style="{DynamicResource TitleLeft}"
                                   Margin="0,0,0,10"/>

                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding SalesOrderLines}"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  VerticalAlignment="Stretch">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Produkt"
                                                    Binding="{Binding Product.Name}"
                                                    Width="*"/>
                                <DataGridTextColumn Header="Antal"
                                                    Binding="{Binding Quantity}"
                                                    Width="80"/>
                                <DataGridTextColumn Header="Pris"
                                                    Binding="{Binding UnitPrice}"
                                                    Width="100"/>
                                <DataGridTextColumn Header="I alt"
                                                    Binding="{Binding SubTotal}"
                                                    Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- HØJRE: Beløb + Ordrestatus + knap -->
                <Border Grid.Column="2"
                        Padding="10">
                    <Grid Margin="0,40,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Beløb -->
                            <RowDefinition Height="Auto"/>
                            <!-- Ordrestatus -->
                            <RowDefinition Height="*"/>
                            <!-- Spacer -->
                            <RowDefinition Height="Auto"/>
                            <!-- Knap -->
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Beløb -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Beløb"
                                   Style="{DynamicResource TitleLeft}"/>

                        <TextBox Grid.Row="0" Grid.Column="2"
                                 Text="{Binding DisplayPaymentAmount, Mode=OneWay}"
                                 IsReadOnly="True"
                                 Style="{DynamicResource InputRight}"
                                 HorizontalAlignment="Stretch"
                                 Margin="0,0,0,8"
                                 MinWidth="220"/>

                        <!-- Ordrestatus -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Ordrestatus"
                                   Style="{DynamicResource TitleLeft}"/>

                        <ComboBox Grid.Row="1" Grid.Column="2"
                                  ItemsSource="{Binding StatusOptions}"
                                  SelectedItem="{Binding SelectedStatus}"
                                  HorizontalAlignment="Stretch"
                                  Margin="0,0,0,16"
                                  MinWidth="220"
                                  Height="40"/>

                        <!-- Behandl ordre knap nederst -->
                        <Button Grid.Row="3" Grid.ColumnSpan="3"
                                Content="Bekræft afsendelse"
                                Style="{DynamicResource ButtonBase}"
                                Command="{Binding ConfirmPaymentCommand}"
                                HorizontalAlignment="Stretch"
                                Margin="0,10,0,0"
                                MinWidth="220"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Status besked -->
            <TextBlock Grid.Row="4"
                       Text="{Binding StatusMessage}"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       FontSize="20"
                       FontWeight="Bold"/>
        </Grid>
    </Border>
</UserControl>
