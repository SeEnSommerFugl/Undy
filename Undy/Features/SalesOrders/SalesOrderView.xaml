<UserControl x:Class="Undy.Views.SalesOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="1280" d:DesignHeight="720">

    <Border Background="{DynamicResource Brush.Background}"
            Padding="20">

        <Grid>
            <!-- LEFT gets more space; RIGHT still roomy -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- LEFT: Sales orders list -->
            <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="0">

                <TextBlock Text="Sales Orders"
                           FontSize="34"
                           FontWeight="Bold"
                           Margin="0,0,0,14"
                           Foreground="{DynamicResource Brush.Text}" />

                <ListView x:Name="SalesListView"
                          ItemsSource="{Binding SalesOrders}"
                          SelectedItem="{Binding SelectedSalesOrder}"
                          Style="{StaticResource ListView.Table}"
                          Height="900"
                          MouseDoubleClick="SalesListView_MouseDoubleClick"
                          SelectionMode="Single">

                    <ListView.View>
                        <GridView AllowsColumnReorder="False"
                                  ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeader.Locked}">

                            <GridViewColumn Header="Order #"
                                            DisplayMemberBinding="{Binding SalesOrderNumber}"
                                            Width="120"/>

                            <GridViewColumn Header="Status"
                                            DisplayMemberBinding="{Binding OrderStatus}"
                                            Width="190"/>

                            <GridViewColumn Header="Total"
                                            DisplayMemberBinding="{Binding TotalPrice}"
                                            Width="170"/>

                            <GridViewColumn Header="Customer"
                                            DisplayMemberBinding="{Binding CustomerName}"
                                            Width="260"/>

                            <GridViewColumn Header="Salgsdato"
                                            DisplayMemberBinding="{Binding SalesDate}"
                                            Width="160"/>

                            <GridViewColumn Header="Afsendt"
                                            DisplayMemberBinding="{Binding ShippedDate}"
                                            Width="160"/>

                        </GridView>
                    </ListView.View>

                </ListView>
            </StackPanel>

            <!-- RIGHT: Selected order details -->
            <StackPanel Grid.Row="0" Grid.Column="2">

                <TextBlock Text="Selected Order Details"
                           FontSize="34"
                           FontWeight="Bold"
                           Margin="0,0,0,14"
                           Foreground="{DynamicResource Brush.Text}" />

                <!-- Card -->
                <Border Background="{DynamicResource Brush.Panel}"
                        CornerRadius="16"
                        Padding="22"
                        Margin="0,0,0,16">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Order Number:"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource Brush.Text}" />
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="{Binding SelectedSalesOrder.SalesOrderNumber}"
                                   FontSize="26"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text}"
                                   HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="E-Mail:"
                                   Margin="0,14,0,0"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource Brush.Text}" />
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Text="{Binding SelectedSalesOrder.CustomerEmail}"
                                   Margin="0,14,0,0"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text}"
                                   HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Order Date:"
                                   Margin="0,14,0,0"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource Brush.Text}" />
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                   Text="{Binding SelectedSalesOrder.SalesDate}"
                                   Margin="0,14,0,0"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text}"
                                   HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Shipped Date:"
                                   Margin="0,14,0,0"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource Brush.Text}" />
                        <TextBlock Grid.Row="3" Grid.Column="1"
                                   Text="{Binding SelectedSalesOrder.ShippedDate}"
                                   Margin="0,14,0,0"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text}"
                                   HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="Total Price:"
                                   Margin="0,14,0,0"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource Brush.Text}" />
                        <TextBlock Grid.Row="4" Grid.Column="1"
                                   Text="{Binding SelectedSalesOrder.TotalPrice}"
                                   Margin="0,14,0,0"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text}"
                                   HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="5" Grid.Column="0"
                                   Text="Customer Number:"
                                   Margin="0,14,0,0"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource Brush.Text}" />
                        <TextBlock Grid.Row="5" Grid.Column="1"
                                   Text="{Binding SelectedSalesOrder.CustomerNumber}"
                                   Margin="0,14,0,0"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text}"
                                   HorizontalAlignment="Right"/>
                    </Grid>

                </Border>
            </StackPanel>

            <!-- RIGHT: Order lines -->
            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Order Lines"
                           FontSize="28"
                           FontWeight="Bold"
                           Margin="0,0,0,12"
                           Foreground="{DynamicResource Brush.Text}" />

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding SelectedOrderLines}"
                          AutoGenerateColumns="False"
                          Style="{StaticResource DataGrid.SalesOrder}"
                          IsReadOnly="True"
                          CanUserReorderColumns="False"
                          CanUserResizeColumns="False"
                          MaxHeight="460">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="*" />
                        <DataGridTextColumn Header="Quantity"     Binding="{Binding Quantity}"    Width="120" />
                        <DataGridTextColumn Header="Unit Price"   Binding="{Binding UnitPrice}"   Width="140" />
                        <DataGridTextColumn Header="Line Total"   Binding="{Binding LineTotal}"   Width="160" />
                    </DataGrid.Columns>

                </DataGrid>
            </Grid>

        </Grid>
    </Border>
</UserControl>
