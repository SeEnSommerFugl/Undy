<UserControl x:Class="Undy.Views.SalesOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Undy.Views"
             xmlns:h="clr-namespace:Undy.Features.Helpers"
             mc:Ignorable="d" 
             d:DesignWidth="1280" d:DesignHeight="720">

    <UserControl.Resources>
        <Style x:Key="SortableHeader"
           TargetType="GridViewColumnHeader"
           BasedOn="{StaticResource {x:Type GridViewColumnHeader}}">
            <EventSetter Event="Click" Handler="GridViewColumnHeader_Click" />
        </Style>
    </UserControl.Resources>



    <!-- Style for page -->
    <Border Style="{DynamicResource Card}">


        <Grid Margin="40">
            <Grid.RowDefinitions>
                <!-- Titel -->
                <RowDefinition Height="Auto"/>
                <!-- Undertekst -->
                <RowDefinition Height="Auto"/>
                <!-- Liste -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Salgsordrer"
                       Style="{DynamicResource H2}"/>

            <!-- Subheader -->
            <TextBlock Grid.Row="1"
                       Text="Oversigt over salgsordrer."
                       FontSize="16"
                       Margin="0,10,0,20"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource Brush.Text}"/>

            <!-- Main content row: list + details grid -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- ListView with sales orders (read-only) -->
                <ListView x:Name="SalesListView"
                          Grid.Column="0"
                          Style="{DynamicResource ListView.Table}"
                          ItemsSource="{Binding SaleView}"
                          MaxHeight="1000"
                          MouseDoubleClick="SalesListView_MouseDoubleClick">
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource SortableHeader}">

                            <!-- Order number -->
                            <GridViewColumn Header="Ordrenummer"
                                DisplayMemberBinding="{Binding OrderNumber}" />

                            <!-- Order status -->
                            <GridViewColumn Header="Ordrestatus"
                                DisplayMemberBinding="{Binding OrderStatus}" />

                            <!-- Payment Status -->
                            <GridViewColumn Header="Betalingsstatus"
                                DisplayMemberBinding="{Binding PaymentStatus}" />

                            <!-- Sales Date -->
                            <GridViewColumn Header="Dato"
                                DisplayMemberBinding="{Binding SalesDate}" />

                            <!-- Product Name -->
                            <GridViewColumn Header="Produktnavn"
                                DisplayMemberBinding="{Binding ProductName}" />

                            <!-- Quantity -->
                            <GridViewColumn Header="Antal"
                                DisplayMemberBinding="{Binding Quantity}" />

                            <!-- Total Price -->
                            <GridViewColumn Header="Total Pris"
                                DisplayMemberBinding="{Binding TotalPrice, StringFormat=C}" />

                            <!-- Customer name -->
                            <GridViewColumn Header="Kundenavn"
                                DisplayMemberBinding="{Binding CustomerName}" />

                            <!-- City -->
                            <GridViewColumn Header="By"
                                DisplayMemberBinding="{Binding City}" />

                            <!-- Total Order price -->
                            <GridViewColumn Header="Total Pris"
                                DisplayMemberBinding="{Binding TotalPrice, StringFormat=C}" />

                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- DataGrid with selected order details -->
                <DataGrid Grid.Column="1"
                          Margin="20,0,0,0"
                          Style="{DynamicResource DataGrid.Table}"
                          ItemsSource="{Binding SelectedOrderDetails}"
                          AutoGenerateColumns="True"
                          IsReadOnly="True" />
            </Grid>

        </Grid>
    </Border>
</UserControl>
