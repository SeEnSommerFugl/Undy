<UserControl x:Class="Undy.Views.IncomingWholesaleOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Style="{DynamicResource Card}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Varemodtagelse"
                       Style="{DynamicResource TitleLeft}"
                       Margin="0,0,0,14"
                       HorizontalAlignment="Center"/>

            <!-- Main: left list + right lines -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT: orders -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Indkøbsordrer"
                               Style="{DynamicResource TitleLeft}"
                               Margin="0,0,0,10"/>

                    <ListView ItemsSource="{Binding WholesaleView}"
                              SelectedItem="{Binding SelectedWholesaleOrder}"
                              Style="{StaticResource ListView.Table}">
                        <ListView.View>
                            <GridView AllowsColumnReorder="False"
                                      ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeader.Locked}">
                                <GridViewColumn Header="Ordrenr."
                                                DisplayMemberBinding="{Binding DisplayWholesaleOrderNumber}"
                                                Width="130"/>
                                <GridViewColumn Header="Dato"
                                                DisplayMemberBinding="{Binding WholesaleOrderDate}"
                                                Width="120"/>
                                <GridViewColumn Header="Status"
                                                DisplayMemberBinding="{Binding OrderStatus}"
                                                Width="160"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>

                <!-- RIGHT: lines (ListView) -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <CheckBox Grid.Row="0"
              Content="Fuldt modtaget"
              IsChecked="{Binding IsFullyReceived, Mode=TwoWay}"
              Margin="0,0,0,10"/>

                    <ListView Grid.Row="1"
              ItemsSource="{Binding LinesView}"
              Style="{StaticResource ListView.Table}"
              Margin="0,0,0,10">
                        <ListView.View>
                            <GridView AllowsColumnReorder="False"
                      ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeader.Locked}">

                                <GridViewColumn Header="Varenr." Width="120"
                                DisplayMemberBinding="{Binding ProductNumber}"/>

                                <GridViewColumn Header="Navn" Width="Auto"
                                DisplayMemberBinding="{Binding ProductName}"/>

                                <GridViewColumn Header="Bestilt" Width="90"
                                DisplayMemberBinding="{Binding OrderedQuantity}"/>

                                <GridViewColumn Header="Allerede modtaget" Width="150"
                                DisplayMemberBinding="{Binding AlreadyReceived}"/>

                                <!-- Skrivbar kolonne -->
                                <GridViewColumn Header="Modtaget" Width="110">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding ReceivedQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource TextBox.TableEditNumeric}"
                                     IsReadOnly="{Binding DataContext.IsFullyReceived, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Difference" Width="110"
                                DisplayMemberBinding="{Binding Difference}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Button Grid.Row="2"
            Content="Bekræft modtagelse"
            Command="{Binding ConfirmOrderCommand}"
            Style="{DynamicResource ButtonBase}"
            Width="220"/>
                </Grid>


                <TextBlock Grid.Row="2"
                       Text="{Binding StatusMessage}"
                       HorizontalAlignment="Center"
                       Margin="0,14,0,0"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
