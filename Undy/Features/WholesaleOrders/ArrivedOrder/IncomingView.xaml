<UserControl x:Class="Undy.Views.IncomingWholesaleOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Border Style="{DynamicResource Card}">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titel -->
            <TextBlock Grid.Row="0"
                       Text="Varemodtagelse"
                       Style="{DynamicResource H2}"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1"
                       Text="Registrér modtagelse af indkøbsordrer."
                       Style="{DynamicResource H3}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"
                       Foreground="Red"/>

            <!-- Indhold -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- ORDRER (venstre) -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Indkøbsordrer"
                               Style="{DynamicResource TitleLeft}"
                               Margin="0,0,0,10"/>

                    <ListView ItemsSource="{Binding WholesaleOrders}"
                              SelectedItem="{Binding SelectedOrder}">
                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Padding" Value="4"/>
                            </Style>
                        </ListView.Resources>

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Ordrenr."
                                                DisplayMemberBinding="{Binding DisplayWholesaleOrderNumber}"
                                                Width="120"/>

                                <GridViewColumn Header="Dato"
                                                DisplayMemberBinding="{Binding WholesaleOrderDate}"
                                                Width="120"/>

                                <GridViewColumn Header="Status"
                                                DisplayMemberBinding="{Binding OrderStatus}"
                                                Width="120"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>

                <!-- (midterkolonne – tom eller brug den til separator) -->

                <!-- LINJER (højre) -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Fuldt modtaget -->
                    <CheckBox Grid.Row="0"
                              Content="Fuldt modtaget"
                              IsChecked="{Binding IsFullyReceived, Mode=TwoWay}"
                              Margin="0,0,0,10"/>

                    <!-- DataGrid for linjer -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Lines}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              AlternationCount="2"
                              GridLinesVisibility="Horizontal"
                              RowBackground="White"
                              AlternatingRowBackground="#FFF5F5F5"
                              HorizontalGridLinesBrush="#FFE0E0E0"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="False"
                              Margin="0,0,0,10">

                        <DataGrid.Resources>
                            <!-- Style til talceller -->
                            <Style x:Key="NumericCellStyle" TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <!-- Produkt -->
                            <DataGridTextColumn Header="Produkt"
                                                Binding="{Binding ProductName}"
                                                Width="*"/>

                            <!-- Modtaget (til venstre, låses når Fuldt modtaget = true) -->
                            <DataGridTemplateColumn Header="Modtaget"
                                                    Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ReceivedQuantity}"
                                                   HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding ReceivedQuantity, UpdateSourceTrigger=PropertyChanged}"
                                                 HorizontalContentAlignment="Center"
                                                 IsReadOnly="{Binding DataContext.IsFullyReceived,
                                                                      RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <!-- Bestilt (kun læsning) -->
                            <DataGridTextColumn Header="Bestilt"
                                                Binding="{Binding OrderedQuantity}"
                                                Width="80"
                                                ElementStyle="{StaticResource NumericCellStyle}"
                                                IsReadOnly="True"/>

                            <!-- Difference (kun læsning) -->
                            <DataGridTextColumn Header="Difference"
                                                Binding="{Binding Difference}"
                                                Width="80"
                                                ElementStyle="{StaticResource NumericCellStyle}"
                                                IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Bekræft knap -->
                    <Button Grid.Row="2"
                            Content="Bekræft modtagelse"
                            Command="{Binding ConfirmOrderCommand}"
                            Style="{DynamicResource ButtonBase}"
                            Margin="0,10,0,0"
                            Width="200"/>
                </Grid>
            </Grid>

            <!-- Status-besked -->
            <TextBlock Grid.Row="3"
                       Text="{Binding StatusMessage}"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       FontSize="18"
                       FontWeight="Bold"/>
        </Grid>
    </Border>
</UserControl>
